<Window x:Class="Crossword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crossword"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Margin="10" x:Name="myDataGrid"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
            <StackPanel Margin="5" x:Name="VerticalST">
                <Label Content="По вертикали:"/>
            </StackPanel>
            <StackPanel Margin="5" x:Name="HorizontalST">
                <Label Content="По горизонтали:"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
